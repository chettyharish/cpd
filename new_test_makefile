CC=/usr/bin/gcc
CPP=/usr/bin/g++ 

all : pipetest multiline redrdest bothredrtest
	echo "Done"
pipetest:
	cat Makefile | grep CC
	cat Makefile | grep CC | grep =
	cat mymake.c | grep char | grep STLEN | grep NUMELE| grep targ_queue
	cat mymake.c | grep char | grep STLEN | nl -v0 | grep NUMELE 
multiline:
	cd tempor;cd new ; cat makefile ;

backtest:
	sleep 100 &
	sleep 50

.c.o:
	echo $<
	echo $@
	$(CC) -o $@ $<

.cpp:
	echo $<
	$(CPP) -o $@ $<
alarmtest:
	sleep 100

redrtest:
	cat Makefile > temp.txt
	grep FLAG < Makefile
bothredrtest:
	sort < Makefile > temp.txt
cdecho:
	cd tempors
	cd new
	echo "Hello World"
	echo "$(CC) $(CPP) $(CC)  $(CPP)"

simple:
	cat Makefile

#For testing cycles and ordering
first : second third fourth
	echo $@
second : fifth sixth
	echo $@
third : first
	echo $@
fourth: second
	echo $@
fifth:  fourth third
	echo $@
sixth:  first
	echo $@

test1: test2 test3
	echo $@
test2: test3
	echo $@
test3: temp.c
	echo $@ 


clean:
	rm temp.o
	rm temp2
